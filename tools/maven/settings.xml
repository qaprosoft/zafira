<?xml version="1.0" encoding="UTF-8"?>


<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<profiles>
		<profile>
			<id>zafira</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
        <zafira.url>http://localhost:8888</zafira.url>
        <zafira.ws.path>/zafira-ws</zafira.ws.path>
        <zafira.web.path>/zafira</zafira.web.path>

				<zafira.db.jdbc.driverClass>org.postgresql.Driver</zafira.db.jdbc.driverClass>
				<zafira.db.jdbc.url>jdbc:postgresql://{host}:{port}/postgres</zafira.db.jdbc.url>
				<zafira.db.jdbc.user>{user}</zafira.db.jdbc.user>
				<zafira.db.jdbc.password>{password}</zafira.db.jdbc.password>
				<zafira.db.c3p0.maxPoolSize>2</zafira.db.c3p0.maxPoolSize>

				<zafira.grid.enabled>false</zafira.grid.enabled>
				<zafira.grid.stf.url>{url}</zafira.grid.stf.url>
				<zafira.grid.stf.token>{token}</zafira.grid.stf.token>
				<zafira.grid.device_timeout.sec>900</zafira.grid.device_timeout.sec>
				<zafira.grid.pubnub.pub_key>{key}</zafira.grid.pubnub.pub_key>
				<zafira.grid.pubnub.sub_key>{key}</zafira.grid.pubnub.sub_key>
				<zafira.grid.pubnub.channel>grid</zafira.grid.pubnub.channel>
				<zafira.grid.logging.enabled>false</zafira.grid.logging.enabled>

				<mail.host>smtp.gmail.com</mail.host>
				<mail.port>587</mail.port>
				<mail.user>{user}</mail.user>
				<mail.pass>{pass}</mail.pass>

				<zafira.amazon.accessKey></zafira.amazon.accessKey>
				<zafira.amazon.secretKey></zafira.amazon.secretKey>
				<zafira.amazon.bucket></zafira.amazon.bucket>

        <zafira.ldap.protocol>ldap</zafira.ldap.protocol>
        <zafira.ldap.server>localhost</zafira.ldap.server>
        <zafira.ldap.port>636</zafira.ldap.port>
        <zafira.ldap.dn></zafira.ldap.dn>
        <zafira.ldap.search_filter>sAMAccountName</zafira.ldap.search_filter>
        <zafira.ldap.manager.user></zafira.ldap.manager.user>
        <zafira.ldap.manager.password></zafira.ldap.manager.password>
			</properties>
		</profile>
	</profiles>
</settings>
